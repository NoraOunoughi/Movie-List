{
    "manifest_version": 3,
    "name": "Movie List",
    "description": "Add movies names to a list",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "48": "images/icon-48.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage"
    ]
}